      <li class="text-slate-600">/</li>
      <li class={`bg-gradient-to-r ${asignatura.color} bg-clip-text text-transparent font-medium`}>
        {asignatura.nombreCorto}
      </li>
    </ol>
  </nav>

  <!-- Asignatura Header -->
  <div class="mb-8 bg-slate-800/30 rounded-2xl p-8 border border-slate-700">
