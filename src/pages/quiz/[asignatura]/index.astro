---
import Layout from '../../../layouts/Layout.astro';
import { asignaturas, temasPorAsignatura, obtenerEstadisticasAsignatura, obtenerAsignaturaInfo } from '../../../data';

export function getStaticPaths() {
  return asignaturas.map(asignatura => ({
    params: { asignatura: asignatura.id }
  }));
}

const { asignatura: asignaturaId } = Astro.params;
const asignatura = obtenerAsignaturaInfo(asignaturaId as string);
const temas = temasPorAsignatura[asignaturaId as string] || [];
const stats = obtenerEstadisticasAsignatura(asignaturaId as string);

if (!asignatura) {
  return Astro.redirect('/404');
}

const tieneContenido = temas.length > 0;
